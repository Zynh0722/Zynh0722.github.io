---
export interface Props {
	frontmatter: {
        title: string
        date: string
        author: string
        description?: string
    };
}

const { frontmatter: { title, date, author } } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Zynh Ludwig</title>
	</head>
	<body>
        <h1>{title}</h1>
        <p class="author">{date} Â· {author}</p>
        <p></p>
		<slot />
	</body>
</html>
<style>
	:root {
        --font-size-code: 14px;
		--font-size-base: 16px;
		--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
		--font-size-xl: clamp(2.44rem, 1vw + 1.85rem, 3.75rem);

        --border-radius-code: 7.5px;

		--color-text: hsl(12, 5%, 4%);
		--color-bg: hsl(10, 21%, 95%);
		--color-border: hsl(17, 24%, 90%);
        --color-border-code: hsl(0, 2%, 46%);
	}

	html {
		font-family: system-ui, sans-serif;
		font-size: var(--font-size-base);
		color: var(--color-text);
		background-color: var(--color-bg);
	}

	body {
		margin: 0 10em 0 10em;
	}

    :global(pre) {
        padding: 1em;
    }

    :global(:not(pre) > code) {
        padding: 0.05em 0.5em;
        box-shadow: 3px;
    }

    :global(pre),
    :global(:not(pre) > code) {
        border: 1px solid var(--color-border-code);
        border-radius: var(--border-radius-code);
    }

	:global(h1) {
		font-size: var(--font-size-xl);
	}

	:global(h2) {
		font-size: var(--font-size-lg);
	}

	:global(code) {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
        font-size: var(--font-size-code);
        color: var(--color-bg);
        background-color: #0d1117;
	}
</style>

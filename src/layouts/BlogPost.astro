---
import Layout from "./Layout.astro";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
		author?: string;
	}
}

const { content } = Astro.props as Props;
const {
	title, pubDate, updatedDate, heroImage, author
} = content;
---

<Layout content={content}>
	<main>
		<article class="article">
			{heroImage && (
				<img
					width={720}
					height={360}
					src={heroImage}
					alt=""
				/>
			)}
			<h1 class="title">{title}</h1>
			{pubDate ? <time>{pubDate}</time> : <div class="time">Draft</div>}
			{author && <span>Â· </span><i class="author">{author}</i>}
			{updatedDate && <div>Last updated on <time>{updatedDate}</time></div>}
			<hr/>
			<slot />
		</article>
	</main>
</Layout>
<style>
	.author {
		filter: brightness(200%);
	}
  .time {
    display: inline;
  }
  main {
    grid-column: full;
    display: grid;
    grid-template-columns: subgrid;
  }
  article {
    grid-column: full;
    display: grid;
    grid-template-columns: subgrid;
  }
</style>
<style is:global>
  .article > * {
    grid-column: content;
  }
  .article > pre {
    grid-column: breakout
  }
</style>
